// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String
  passwordHash String
  level        Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Quest {
  id                    String   @id @default(uuid())
  title                 String
  description           String
  startsAt              String
  startedAt             String
  minutes               Int
  tagId                 String
  difficulty            String
  isDone                Boolean  @default(false)
  startDate             DateTime
  endDate               DateTime
  dates                 String[]
  weeklyFrequency       Int
  weeklyCompletionCount Int      @default(0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  userId                String
}

model Tag {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
}
